<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight(%d{HH:mm:ss.SSS} [%thread] %-5level %logger{0}) | %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="fr.vter.xdcc" additivity="false" level="INFO"/>
    <logger name="watcher" additivity="false" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>