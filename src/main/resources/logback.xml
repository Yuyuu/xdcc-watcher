<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight(%d{HH:mm:ss.SSS} [%thread] %-5level %logger{0}) | %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="fr.vter" additivity="false" level="INFO">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="watcher" additivity="false" level="INFO">
        <appender-ref ref="STDOUT"/>
    </logger>
</configuration>